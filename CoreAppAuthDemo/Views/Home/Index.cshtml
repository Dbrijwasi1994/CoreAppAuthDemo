@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    @if (SignInManager.IsSignedIn(User))
    {
        @Html.ActionLink("Enable Authenticator", "EnableTotpAuthenticator", "Account")
        <button type="submit" class="btn btn-primary" asp-action="@Url.Action("EnableTotpAuthenticator", "Account")" formmethod="get">Enable Authenticator</button>
    }
</div>
