@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1>Error</h1>

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>
<h3 class="text-danger">Error Code : @Model.ErrorId</h3>
<h4 class="text-danger">Error Message : @Model.ErrorMessage</h4>

